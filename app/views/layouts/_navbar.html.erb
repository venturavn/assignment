    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <div style="float:left">
            <%= link_to "MYSHOP", '/', id: "logo" %>

            <input type="text" class="search-query" id="searchTextbox" placeholder="Type something here and hit Enter..">
