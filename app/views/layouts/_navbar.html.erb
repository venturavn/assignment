    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <div style="float:left">
            <%= link_to "VenShop", '/', id: "logo" %>

            <input type="text" class="search-query" id="searchTextbox" placeholder="Type something here and hit Enter.." value="<%=params[:q]%>">
          </div>
          <nav>
            <ul class="nav pull-right">
              <li><%= link_to "Home",    '/' %></li>
              <li><%= link_to "Help",    '/faq' %></li>
              <% if (!session[:userid]) %>
              <li><%= link_to "Sign in", login_path %></li>
              <li><%= link_to "Register", register_path %></li>
              <% else %>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= get_user.email %></a>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                  <li role="presentation"><%= link_to "/profile", role:"menuitem", tabindex: "-1" do %><span class='icon-user'></span> Your Profile<% end %></li>
                  <li role="presentation"><%= link_to "/usercp", role:"menuitem", tabindex: "-1" do %><span class='icon-pencil'></span> Edit Profile<% end %></li>
