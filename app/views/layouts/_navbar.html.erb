              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= get_user.email %></a>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                  <li role="presentation"><%= link_to "Your Profile" , "/usercp", role:"menuitem", tabindex: "-1" %></li>
