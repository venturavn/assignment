                    <li class="divider"></li>
                  <li role="presentation"><%= link_to "/user-product", role:"menuitem", tabindex: "-1" do %><span class='icon-th-list'></span> Your Products<% end %></li>
                  <li role="presentation"><%= link_to "/product/add", role:"menuitem", tabindex: "-1" do %><span class='icon-plus-sign'></span> Add Products<% end %></li>
                    <li class="divider"></li>
                  <li role="presentation"><%= link_to "/logout", role:"menuitem", tabindex: "-1" do %><span class='icon-arrow-left'></span> Log Out<% end %></li>
                </ul>
              </li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </header>