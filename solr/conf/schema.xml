<?xml version="1.0" encoding="UTF-8"?>
<schema name="Recruit" version="1.1">

  <types>
    <fieldType name="int" class="solr.IntField" omitNorms="true"/>
    <fieldType name="sint" class="solr.SortableIntField" sortMissingLast="true" omitNorms="true"/>
    <fieldType name="long" class="solr.LongField" omitNorms="true"/>
    <fieldType name="slong" class="solr.SortableLongField" sortMissingLast="true" omitNorms="true"/>
    <fieldType name="float" class="solr.FloatField" omitNorms="true"/>
    <fieldType name="sfloat" class="solr.SortableFloatField" sortMissingLast="true" omitNorms="true"/>
    <fieldType name="double" class="solr.DoubleField" omitNorms="true"/>
    <fieldType name="sdouble" class="solr.SortableDoubleField" sortMissingLast="true" omitNorms="true"/>
    <fieldType name="string" class="solr.StrField" sortMissingLast="true" omitNorms="true"/>
    <fieldType name="date" class="solr.DateField" sortMissingLast="true" omitNorms="true"/>
    <fieldType name="text" class="solr.TextField" sortMissingLast="true" omitNorms="true">
     <analyzer>
       <tokenizer class="solr.CJKTokenizerFactory"/>
     </analyzer>
   </fieldType>
   <!-- <fieldType name="text" class="solr.TextField">

      <analyzer class="org.apache.lucene.analysis.ja.JapaneseAnalyzer" />

  </fieldType> -->
  <fieldType name="text_general" class="solr.TextField" positionIncrementGap="100">
    <analyzer type="index">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" enablePositionIncrements="true" />

      <filter class="solr.LowerCaseFilterFactory"/>
    </analyzer>

    <analyzer type="query">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" enablePositionIncrements="true" />
      <filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="true"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.WordDelimiterFilterFactory"
        generateWordParts="1"
        generateNumberParts="1"
        catenateWords="0"
        catenateNumbers="0"
        catenateAll="0"
        preserveOriginal="1"
        />
      </analyzer>
    </fieldType>
  </types>
  <dataSource type="FileDataSource" encoding="UTF-8"/>
  <fields>

    <field name="id" type="text" indexed="true" stored="true" required="true"/>
    <field name="name" type="text" indexed="true" stored="true" required="false"/>
    <field name="description" type="text" indexed="true" stored="true" required="false"/>
    <field name="company_name" type="text" indexed="true" stored="true" required="false"/>
    <field name="company_address" type="text" indexed="true" stored="true" required="false"/>
    <field name="staff_type" type="text" indexed="true" stored="true" required="false"/>
    <field name="job_industry" type="text" indexed="true" stored="true" required="false"/>
    <field name="job_type" type="text" indexed="true" stored="true" required="false"/>
    <field name="salary" type="text" indexed="true" stored="true" required="false"/>
    <field name="work_place" type="text" indexed="true" stored="true" required="false"/>
    <field name="job_content" type="text" indexed="true" stored="true" required="false"/>
    <field name="job_name_na" type="text" indexed="true" stored="true" required="false"/>
    <field name="company_name_na" type="text" indexed="true" stored="true" required="false"/>
    <field name="company_address_na" type="text" indexed="true" stored="true" required="false"/>
    <field name="staff_type_na" type="text" indexed="true" stored="true" required="false"/>
    <field name="job_industry_na" type="text" indexed="true" stored="true" required="false"/>
    <field name="job_type_na" type="text" indexed="true" stored="true" required="false"/>
    <field name="work_place_na" type="text" indexed="true" stored="true" required="false"/>
    <field name="job_content_na" type="text" indexed="true" stored="true" required="false"/>

  <field name="text" type="text_general" indexed="true" stored="false" multiValued="false"/>
</fields>

<uniqueKey>_id</uniqueKey>

<defaultSearchField>job_name</defaultSearchField>

<!-- SolrQueryParser configuration: defaultOperator="AND|OR" -->
 <solrQueryParser defaultOperator="AND|OR"/>

</schema>